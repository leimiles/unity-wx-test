{
  "name": "unity-webgl-server",
  "version": "1.0.0",
  "description": "Unity WebGL 运行环境服务器",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:path": "cross-env WEBGL_BUILD_PATH=$npm_config_path node server.js",
    "build": "echo '请先使用Unity构建WebGL版本'",
    "docker:build": "docker build -t unity-webgl .",
    "docker:build:path": "docker build --build-arg WEBGL_BUILD_PATH=$npm_config_path -t unity-webgl .",
    "docker:run": "docker run -p 8080:80 unity-webgl",
    "docker:compose": "docker-compose up -d",
    "docker:compose:path": "cross-env WEBGL_BUILD_PATH=$npm_config_path docker-compose up -d"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "unity",
    "webgl",
    "server"
  ],
  "author": "Your Name",
  "license": "MIT"
}
